<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="75"/>
    <arg value="p"/>
    <config name="testVersion" value="8.1-" />
    <rule ref="PSR2" />
    <file>src/</file>
    <file>tests/</file>
    <exclude-pattern>*/tests/*</exclude-pattern>
</ruleset>
